#include<stdio.h>
void main()
{
    char a[100],k;
    int i,ind,l;
    printf("Enter a string");
    gets(a);
    printf("Enter a character to dlt and also from which index");
    scanf("%c%d",&k,&ind);
    //for(l=0;a[l]!='\0';l++);
    for(i=ind;a[i]!=0;i++)
    {
        a[i]=a[i+1];
    }
    printf("Editted string is %s",a);
}
