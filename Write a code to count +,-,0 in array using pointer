#include<stdio.h>
void main()
{
    int n,cp=0,cn=0,cz=0;
    scanf("%d",&n);
    int i,*p=a,a[n],*cna=&cn,*cpa=&cp,*cza=&cz;
    for(i=0;i<n;i++)
        scanf("%d",p+i);
    for(i=0;i<n;i++)
    {
        if(*(p+i)<0)
          (*cna)++;
        else  if(*(p+i)>0)
            (*cpa)++;
            else
                (*cza)++;
    }
    printf("Count of positive,negative,zero is %d,%d,%d",*cpa,*cna,*cza);
}
