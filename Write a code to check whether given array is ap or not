#include<stdio.h>
#define max 10
void main()
{
    int a[max],n,i,d,c=0;
    printf("Enter limit: ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
        scanf("%d",&a[i]);
    d=a[1]-a[0];
    for(i=2;i<n;i++)
    {
        if(d!=(a[i]-a[i-1]))
        {
            printf("No");
            c=1;
            break;
        }
    }
    if(c==0)
        printf("Yes");
}
//alternative of above
#include<stdio.h>
#include<stdlib.h>
void ap(int [],int);
void main()
{
    int n,*p,i;
    scanf("%d",&n);
    p=(int*)(malloc(n*sizeof(int)));
    if(p==NULL)
        printf("Memory not allocated");
    else
    {
        for(i=0;i<n;i++)
            scanf("%d",(p+i));
    }
    ap(p,n);
}
void ap(int a[],int n)
{
    int i,c,d,z=0;
    c=a[1]-a[0];
    if(n%2==0)
    {
        for(i=2;i<n;i=i+2)
        {
            d=a[i+1]-a[i];
            if(c!=d)
            {
                z++;
                break;
            }
        }
    }
    else
    {
        for(i=2;i<(n-1);i=i+2)
        {
            d=a[i+1]-a[i];
            if(c!=d)
            {
                z++;
                break;
            }
        }
        if((a[n-2]+c)!=a[n-1])
            z++;
    }
    if(z==0)
        printf("yes");
    else
        printf("no");
}

